{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HyperionBox",
  "version": "1.1.0",
  "identifier": "com.hyperionbox.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "HyperionBox",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "script-src": "* 'unsafe-inline' 'unsafe-eval';",
        "style-src": "* 'unsafe-inline';",
        "connect-src": "* blob: data: asset: asset://localhost",
        "frame-src": "* blob: data: asset: asset://localhost",
        "img-src": "* blob: data: asset: asset://localhost",
        "media-src": "* blob: data: asset: asset://localhost",
        "object-src": "* blob: data: asset: asset://localhost"
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["**", "$APPDATA/**", "$APPDATA/.cache/**"]

      }
    }
  },
  "plugins": {
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }

}
