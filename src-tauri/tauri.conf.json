{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HyperionBox",
  "version": "2.0.7",
  "identifier": "io.github.goodday360.hyperionbox",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "HyperionBox",
        "width": 800,
        "height": 600,
        "backgroundColor": "#000000",
        "decorations": false
      }
    ],
    "security": {
      "csp": null,

      "assetProtocol": {
        "enable": true,
        "scope": [
          "**/*",
          "/*",
          "/**/*",
          "/home/*/.local/share/io.github.goodday360.hyperionbox/**/*"
        ]
      }
    }
  },
  
  "bundle": {
    "createUpdaterArtifacts": true,
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE3MjMzMTk2OUY2RTUwNzEKUldSeFVHNmZsakVqRnk0a2R5bEoyRTVQd2hrZjRXNlI4S1g2UlV0LzM0RS9zUExGWnlDbGxHMXUK",
      "endpoints": [
        "https://github.com/GoodDay360/HyperionBox/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
