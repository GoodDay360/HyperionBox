{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "log:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "exec",
          "cmd": "cmd.exe",
          "args": [
            "/c",
            {
              "validator": "^.*$"
            }
          ]
        }
      ]
    },
    "fs:default",
    "fs:write-files",
    "fs:allow-open",
    "fs:allow-write",
    "fs:allow-read",
    "fs:allow-rename",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-write-text-file",
    "fs:scope-download-recursive",
    "fs:scope-resource-recursive",
    {
      "identifier": "fs:scope",
      "allow": [
        {"path": "$APPDATA"},
        {"path": "$APPDATA/**/*"},
        {"path": "$TEMP"},
        {"path": "$TEMP/**/*"}
      ]
    },
    "os:default",
    "http:default",
    {
      "identifier": "http:default",
      "allow": [{ "url": "https://**/*" }],
      "deny": []
    }
  ]
}