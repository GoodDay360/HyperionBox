{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "log:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "exec-cmd",
          "cmd": "cmd.exe",
          "args": [
            "/c",
            {
              "validator": "^.*$"
            }
          ]
        }
      ]
    }
  ]
}